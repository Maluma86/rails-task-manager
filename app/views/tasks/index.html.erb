<% @tasks.each do |task| %>
  <li class="d-flex align-items-center">
    <% if task.completed? %>
      <i class="fas fa-check-square me-2"></i>
    <% else %>
      <i class="far fa-square me-2"></i>
    <% end %>
    <%= link_to task.title, task_path(task), class: "flex-grow-1" %>
    <!-- etcâ€¦ -->
  </li>
<% end %>
